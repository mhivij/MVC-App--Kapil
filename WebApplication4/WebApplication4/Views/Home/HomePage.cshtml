@model IEnumerable<WebApplication4.Models.Product>

@{
    ViewBag.Title = "HomePage";
}
<body>
    <div class="jumbotron">
        <div class="container text-center">
            <h1>Online Store</h1>
            <p>Mission, Vission & Values</p>
        </div>
    </div>
    <div class="container">
        <div class="row">
            @{
                foreach (var item in Model)
                {                    
                        var base64 = Convert.ToBase64String(item.ProductImage);
                        var imgsrc = String.Format("data:image/jpg;base64,{0}", base64);
                    
                    <div class="col-sm-4">
                        <div class="panel panel-primary">
                            <div class="panel-heading">@Html.DisplayFor(model => item.ProductName)</div>
                            <div class="panel-body"><img src="@imgsrc" style="max-height: 50%; max-width: 50%"  class="img-responsive"></div>
                            <div class="panel-footer">@Html.DisplayFor(model => item.ProductName)</div>
                        </div>
                    </div>
                  }
                }
        </div>
    </div><br>

